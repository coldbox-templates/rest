    },
    "bugs":"https://github.com/coldbox-templates/rest/issues",
    "shortDescription":"This template gives you the base for building RESTFul web services with ColdBox",
    "contributors":[],
    "ignore":[],
    "devDependencies":{
        "testbox":"^3.0.0",
        "relax":"^4",
        "commandbox-dotenv":"*",
        "commandbox-cfconfig":"*",
        "commandbox-cfformat":"*"
    },
    "installPaths":{
        "coldbox":"coldbox/",
        "testbox":"testbox/",
